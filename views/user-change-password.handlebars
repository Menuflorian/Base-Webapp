<div class="container col-lg-9">
    <div class="card">
        <h4 class="card-header">Change password</h4>
        <div class="card-body">
            {{#unless admin}}
            <div class="form-group">
                <label>Current password</label>
                <input id="CurrentPasswordTextArea" type="password" class="form-control" name="userpassword">
            </div>
            {{/unless}}
            <div class="form-group">
                <label>New password</label>
                <input id="PasswordTextArea" type="password" class="form-control" name="password">
                <div id="ErrorPasswordEmpty" class="container" style=" display: none" >
                    Password can't be empty.
                </div>
                <div id="ErrorPasswordDontMatch" class="container" style=" display: none" >
                    Password don't match with cofirmed password.
                </div>
            </div>
            <div class="form-group">
                <label>Confirm new password</label>
                <input id="Password2TextArea" type="password" class="form-control" name="password2">
                <div id="ErrorPassword2Empty" class="container" style=" display: none" >
                    Please confirm your new password.
                </div>
            </div>
            <div class="form-group">
                <input id="IDArea" type="hidden" value="{{userEdit._id}}" name="id"></input>
            </div>
            <button id="ChangePasswordButton" class="btn btn-primary btn-lg btn-block">Save password</button>

        </div>
    </div>
</div>

<script src="/js/views/user-change-password.js"></script>
