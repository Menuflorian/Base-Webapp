                    <div class="form-group">
						<input id="UsernameTextArea" type="text" class="form-control" placeholder="Enter Username" name="username" onkeyup="this.value = this.value.replace(/[^a-zA-Z0-9]/, 'g')">
						<div id="ErrorUserNameEmpty" class="container" style=" display: none" >
							Username can't be empty.
						</div>
                    </div>
                    <div class="form-group">
						<input id="EmailTextArea" type="email" class="form-control" placeholder="Enter Email" name="email">
						<div id="ErrorEmailEmpty" class="container" style=" display: none" >
							Email can't be empty.
						</div>
						<div id="ErrorEmailInvalid" class="container" style=" display: none" >
							Email Must be a valid email
						</div>
                    </div>
                    <div class="form-group">
						<input id="PasswordTextArea" type="password" class="form-control" placeholder="Enter Password" name="password">
						<div id="ErrorPasswordEmpty" class="container" style=" display: none" >
							Password can't be empty.
						</div>
						<div id="ErrorPasswordDontMatch" class="container" style=" display: none" >
							Password don't match with cofirm password.
						</div>
                    </div>
                    <div class="form-group">
						<input id="Password2TextArea" type="password" class="form-control" placeholder="Re-enter Password" name="password2">
						<div id="ErrorPassword2Empty" class="container" style=" display: none" >
							Please confirm your password
						</div>
					</div>
                    <button id="SubmitButton" class="btn btn-primary btn-lg btn-block">Register</button>
				</div>
			</div>
		</div>
	</div>
</div>

