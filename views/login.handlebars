<div class="container" style=" margin-top: 100px;">
	<div class="row justify-content-center">
		<div class="col-lg-4 mb-4">
			<div class="card h-100">
				<h4 class="card-header">Login</h4>
				<div class="card-body">
                    <div class="form-group">
                        <input id="UsernameTextArea" type="text" class="form-control" name="username" placeholder="Email">
                        <div id="ErrorUsernameEmpty" class="container" style=" display: none" >
							Username can't be empty.
						</div>
                    </div>
                    <div class="form-group">
                        <input id="PasswordTextArea" type="password" class="form-control" name="password" placeholder="Password">
                        <div id="ErrorPasswordEmpty" class="container" style=" display: none" >
							Password can't be empty.
						</div>
                    </div>
                    <div class="recpassword">
                        <label>
                        <a href="">Forgotten password?</a>
                        </label></br>
                        <label>
                        <a href="/users/register">Not register yet?</a>
                        </label>
                    </div>
                    <button id="SubmitButton" class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
				</div>
			</div>
		</div>
	</div>
</div>

