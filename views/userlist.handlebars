<div class="container">
  <div class="card">
    <h4 class="card-header">User list</h4>
    <div class="card-body">
      <table class="table table-responsive">
        <thead class= "responsive-table-line thead">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Rank</th>
            <th scope="col"></th>

          </tr>
        </thead>
        {{#each db_User}}
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>{{this.name}}</td>
              <td>{{this.username}}</td>
              <td>{{this.email}}</td>
              {{#if this.isAdmin}}
                <td>Admin</td>
              {{else}}
                <td>User</td>
              {{/if}}
              <td><a type="button" href="/admin/admin-edit-user{{this._id}}" class="btn btn-primary">See profile</a></td>
            </tr>
          </tbody>
        {{/each}}
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col">Rank</th>
          <th scope="col"></th>

        </tr>
      </table>
    </div>
  </div>
</div>
