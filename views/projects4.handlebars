<div class="container">
	<h1 class="mt-4 mb-3">Projets
    {{#if admin}}
      <small>You are an admin.</small>
    {{/if}}

  </h1>

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="/">Home</a>
		</li>
		<li class="breadcrumb-item active">Projects version portfolio 4</li>
	</ol>
	<div class="row">
		{{#each dbData}}
			<div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
				<div class="card h-100">
					<a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
					<div class="card-body">
						<h3 class="card-title"><b>{{this.name}}</b></h3>
                        <p><b>Owner Name:</b>  {{this.ownerName}}</p>
						<p><b>Corp:</b> {{this.corp}}</p>
						<p><b>Creation date</b>: {{formaDate this.creationdate}}</p>
						<p><b>Last edit:</b> {{formaDate this.lastedit}}</p>
					</div>
					<div class="containerfluid d-flex justify-content-center">
						<a type="button" href="/exports/{{this._id}}" class="btn btn-primary" style=" margin-bottom: 10px">Edit</a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
