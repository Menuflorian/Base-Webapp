<div class="container col-lg-9">
    <div class="card">
    	<h4 class="card-header">Edit profile</h4>
        <div class="card-body">
            <div class="form-group">
                <label>Name</label>
                <input id="NameTextArea" type="text" class="form-control" value="{{userEdit.name}}" name="name">
                <div id="ErrorNameEmpty" class="container" style=" display: none" >
                    Name can't be empty.
                </div>
            </div>
            <div class="form-group">
                <label>Username</label>
                <input id="UsernameTextArea" type="text" class="form-control" value="{{userEdit.username}}" name="username">
                <div id="ErrorUserNameEmpty" class="container" style=" display: none" >
                    Username can't be empty.
                </div>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="EmailTextArea" type="email" class="form-control" value="{{userEdit.email}}" name="email">
                <div id="ErrorEmailEmpty" class="container" style=" display: none" >
                    Email can't be empty.
                </div>
                <div id="ErrorEmailInvalid" class="container" style=" display: none" >
                    Email must be a valid email.
                </div>
            </div>
            <div class="form-group">
                <input id="IdArea" type="hidden" value="{{userEdit._id}}" name="id"></input>
            </div>
            <button id="SubmitButton" class="btn btn-primary btn-lg btn-block">Save</button>
        </div>
    </div>
</div>

<script src="/js/views/user-edit-profile.js"></script>
