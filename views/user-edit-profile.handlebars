<div class="container col-lg-9">
    <div class="card">
    	<h4 class="card-header">Edit profile</h4>
    	<div class="card-body">
            <div class="card-body">
    			<div class="form-group">
    				<label>Name</label>
    				<input id="nameTextArea" type="text" class="form-control" placeholder="{{user.name}}" name="name">
    			</div>
    			<div class="form-group">
    				<label>Username</label>
    				<input id="usernameTextArea" type="text" class="form-control" placeholder="{{user.username}}" name="username">
    			</div>
    			<div class="form-group">
    				<label>Email</label>
    				<input id="emailTextArea" type="email" class="form-control" placeholder="{{user.email}}" name="email">
    			</div>
                <div class="form-group">
                    <input id="idArea" type="hidden" value="{{user._id}}" name="id"></input>
                </div>
    			<button id="submitButton" class="btn btn-primary btn-lg " >Send</button>
    		</div>
        </div>
    </div>
</div>

<script src="/js/views/user-edit-profile.js"></script>
