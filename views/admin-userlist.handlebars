<div class="container col-lg-9">
	<div class="card">
        <h4 class="card-header">User list</h4>
        <div class="card-body">

            <table class="table table-hover table-responsive-xl ">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                {{#each db_user}}
                    <tbody>
                        <tr>
                            <th scope="row">{{math @index "+" "1"}}</th>
                            <td>{{this.name}}</td>
                            <td>{{this.username}}</td>
                            <td>{{this.email}}</td>
                            {{#if this.isAdmin}}
                                <td>Admin</td>
                            {{else}}
                                <td>User</td>
                            {{/if}}
                            <td><a href="/admin/admin-edit-user/{{this._id}}" class="btn btn-primary btn-sm">See profile</a></td>
                        </tr>
                    </tbody>
                {{/each}}
            </table>
        </div>
    </div>
</div>
